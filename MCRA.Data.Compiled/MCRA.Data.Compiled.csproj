    <PackageReference Include="MathNet.Numerics" Version="5.0.0" />
    <PackageReference Include="NCalcSync" Version="5.2.11" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\MCRA.General\MCRA.General.csproj" />
