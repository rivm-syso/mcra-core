<?xml version="1.0" encoding="utf-8"?>
<TableDefinition>
  <Id>ConsumerProductApplicationAmounts</Id>
  <Name>Consumer product application amounts</Name>
  <Description>
    Distributions for application amounts can be dependent on e.g. age, sex.
  </Description>
  <Aliases>
    <string>ConsumerProductApplicationAmounts</string>
    <string>CPApplicationAmounts</string>
    <string>ApplicationAmounts</string>
  </Aliases>
  <PreferredAlias>CPApplicationAmounts</PreferredAlias>
  <HiddenAliases>
    <string>RawConsumerProductApplicationAmounts</string>
  </HiddenAliases>
  <TargetDataTable>RawConsumerProductApplicationAmounts</TargetDataTable>
  <ColumnDefinitions>
    <ColumnDefinition Required="true" FieldSize="50" FieldType="AlphaNumeric">
      <Id>idProduct</Id>
      <Description>The consumer product.</Description>
      <Aliases>
        <string>idProduct</string>
        <string>ProductId</string>
      </Aliases>
      <ForeignKeyTables>
        <string>ConsumerProducts</string>
      </ForeignKeyTables>
    </ColumnDefinition>
    <ColumnDefinition Required="true" FieldType="Numeric">
      <Id>Amount</Id>
      <Description>
        Mean of the distribution.
      </Description>
      <Aliases>
        <string>Amount</string>
        <string>Mean</string>
      </Aliases>
    </ColumnDefinition>
    <ColumnDefinition FieldType="ApplicationAmountDistributionType">
      <Id>DistributionType</Id>
      <Description>
        Distribution type (LogNormal).
        If not specified, the application amount is assumed to be constant.
      </Description>
      <Aliases>
        <string>DistributionType</string>
        <string>Distribution</string>
      </Aliases>
      <PossibleValues>
        <PossibleValue>LogNormal</PossibleValue>
      </PossibleValues>
    </ColumnDefinition>
    <ColumnDefinition FieldType="Numeric">
      <Id>CvVariability</Id>
      <Description>Coefficient of variation.</Description>
      <Aliases>
        <string>CvVariability</string>
        <string>Sd</string>
      </Aliases>
    </ColumnDefinition>
  </ColumnDefinitions>
</TableDefinition>
